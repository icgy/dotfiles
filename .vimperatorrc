" vim: set ft=vimperator:

" title
set titlestring=vimperator

" focus content
set focuscontent

" use visualbell not beep
set visualbell

" invalid visualbell
highlight Bell display:none

" mapping <C-v> for paste on command line
cmap <C-v> <S-Insert>
imap <C-v> <S-Insert>

" mapping ctrl + a
noremap <C-a> <Insert><C-a><Insert>

" copy
map u :copy%URL%<CR>
map y :copy%TITLE% - %URL%<CR><esc>

" restart
map sai :restart

" tab
map <Left> gT
map <Right> gt

" scroll 5times
noremap j 10j
noremap k 10k

" quit
map q :quit

" private
map pr <S-M-p>
